<?xml version="1.0"?>
<ruleset name="Oro">
    <description>PSR2 + Oro custom coding standard.</description>
    <rule ref="PSR2"/>
    <rule ref="Oro.Commenting.ClassComment">
        <exclude-pattern>*/Tests/*</exclude-pattern>
        <exclude-pattern>*/DependencyInjection/*Extension.php</exclude-pattern>
        <exclude-pattern>*/DependencyInjection/*Configuration.php</exclude-pattern>
        <exclude-pattern>*/*Bundle.php</exclude-pattern>
        <exclude-pattern>*/Migrations/Schema/*</exclude-pattern>
    </rule>
    <rule ref="Generic.Commenting.Todo">
        <type>error</type>
    </rule>
    <exclude-pattern>*/Acme/*</exclude-pattern>
    <exclude-pattern>*/Rector/*</exclude-pattern>
    <exclude-pattern>*/sets/*</exclude-pattern>
    <exclude-pattern>*/doctrine-em-loader.php</exclude-pattern>
</ruleset>
