@name = calendar_invitation_delete_parent_event
@entityName = Oro\Bundle\CalendarBundle\Entity\CalendarEvent
@subject = Canceled Event: {{ entity.title }}
@isSystem = 1
@isEditable = 1

<p><b>This event has been canceled and was removed from your calendar.</b></p>
<h1>{{ entity.title }}</h1>
<div>
    <p><i>Start date:</i> {{ entity.start|oro_format_datetime_organization({'organization': entity.calendar.organization}) }}</p>
    <p><i>End date:</i> {{ entity.end|oro_format_datetime_organization({'organization': entity.calendar.organization}) }}</p>
    <p><i>Description:</i>{{ entity.description }}</p>
</div>
