<style>
    @media (max-width: 480pt) {
        .wrapper{
            width: 100% !important;
        }
    }
    a:hover {
        text-decoration: underline;
    }
</style>
<table class="wrapper" style="border-collapse: collapse; width: 640px; width: 480pt; max-width: 100%; box-sizing: border-box">
    <tr>
        <td style="background-color: #ffffff; padding: 4pt">
            <span style="font-family: Arial, Helvetica, sans-serif; font-size: 14pt; line-height: 14pt; color: #444444">{{ entity.parent.calendar.owner|oro_format_name|default('N/A') }} has sent you an invitation to {{ entity.title }}.</span>
            <div style="height: 10pt; line-height: 10pt">&nbsp;</div>
            <table class="highlight" style="border-collapse:collapse; background: #FFF9E9; color: #827030; width: 100%; font-family: Arial, Helvetica, sans-serif; font-size: 10pt;">
                <tr>
                    <td colspan="2" style="padding: 9pt 9pt 3pt 9pt; font-family: Arial, Helvetica, sans-serif; font-size: 14pt; line-height: 14pt; vertical-align: top">{{ entity.title }}</td>
                </tr>
                <tr>
                    <td style="width: 65pt; padding: 0 5pt 0 9pt; line-height: 1.3em; font-family: Arial, Helvetica, sans-serif; font-size: 10pt; vertical-align: top"><strong>When:</strong></td>
                    <td style="padding: 0 9pt 0 0; line-height: 1.3em; font-family: Arial, Helvetica, sans-serif; font-size: 10pt; vertical-align: top">{{ calendar_date_range(entity.start, entity.end, entity.allDay, 1) }}</td>
                </tr>
                <tr>
                    <td style="width: 65pt; padding: 0 5pt 0 9pt; line-height: 1.3em; height:1em; font-family: Arial, Helvetica, sans-serif; font-size: 10pt; vertical-align: top"><strong>Calendar:</strong></td>
                    <td style="padding: 0 9pt 0 0; line-height: 1.3em; height:1em; font-family: Arial, Helvetica, sans-serif; font-size: 10pt; vertical-align: top">{{ entity.calendar }}</td>
                </tr>
                <tr>
                    <td style="width: 65pt; padding: 0 5pt 0 9pt; line-height: 1.3em; height:1em; font-family: Arial, Helvetica, sans-serif; font-size: 10pt; vertical-align: top"><strong>Description:</strong></td>
                    <td style="padding: 0 9pt 0 0; line-height: 1.3em; height:1em; font-family: Arial, Helvetica, sans-serif; font-size: 10pt; vertical-align: top">{{ entity.description }}</td>
                </tr>
                <tr>
                    <td style="width: 65pt; padding: 0 5pt 9pt 9pt; line-height: 1.3em; font-family: Arial, Helvetica, sans-serif; font-size: 10pt; vertical-align: top">&nbsp;</td>
                    <td style="padding: 0 9pt 9pt 0; line-height: 1.3em; font-family: Arial, Helvetica, sans-serif; font-size: 10pt; vertical-align: top">
                        <a href="{{ oro_config_value('oro_ui.application_url') }}{{ path('oro_calendar_event_view', {'id': entity.id}) }}" target="_blank">more details Â»</a>
                    </td>
                </tr>
            </table>
            <p style="color: #444444; font-size: 10pt; font-family: Arial, Helvetica, sans-serif; font-weight: normal; margin: 5pt 0px;">
                Please follow this link to respond to invitation in OroCRM:
            </p>
            <table style="width: 100%;">
                <tbody>
                <tr>
                    <td>&nbsp;</td>
                    <td style="padding: 5pt 0; background: #2ea63a; width: 105px; text-align: center">
                        <a style="color: #ffffff; font-size: 11pt; text-transform: uppercase; text-decoration: none; line-height: 1em; font-family: Arial, Helvetica, sans-serif;" href="{{ oro_config_value('oro_ui.application_url') }}{{ path('oro_calendar_event_view', {'id': entity.id}) }}" target="_blank">
                            RESPOND
                        </a>
                    </td>
                    <td>&nbsp;</td>
                </tr>
                </tbody>
            </table>
        </td>
    </tr>
</table>
