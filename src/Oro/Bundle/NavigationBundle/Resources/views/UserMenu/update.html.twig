{% extends 'OroNavigationBundle:menuUpdate:update.html.twig' %}

{% set menuViewPath= path('oro_navigation_user_menu_view', {menuName: entity.menu}) %}
{% set menuCreatePath= path('oro_navigation_user_menu_create', {menuName: entity.menu, parentKey: entity.key}) %}
{% set menuCreateDividerPath= path('oro_navigation_user_menu_create', {menuName: entity.menu, parentKey: entity.key}) %}
{% set menuUpdatePath= path('oro_navigation_user_menu_update', {menuName: entity.menu, key: entity.key}) %}
{% set onRootSelectRoute = 'oro_navigation_user_menu_view' %}
{% set onSelectRoute = 'oro_navigation_user_menu_update' %}
{% set ownerId = null %}
{% set fullname = app.user|oro_format_name|default('N/A') %}

{% oro_title_set({params : {"%username%": fullname, "%title%": entity.title|trans()}}) %}
{% set breadcrumbs = {
    'entity': entity,
    'indexPath': path('oro_user_index'),
    'indexLabel': 'oro.user.entity_plural_label'|trans,
    'additional': [
        {
            'indexPath': path('oro_user_profile_view'),
            'indexLabel': fullname
        },
        {
            'indexPath': path('oro_navigation_user_menu_index'),
            'indexLabel': 'oro.navigation.menuupdate.roots_plural_label'|trans
        },
        {
            'indexPath': path('oro_navigation_user_menu_view', {menuName: menuName}),
            'indexLabel': menuName
        }
    ]
} %}
