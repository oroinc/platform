{% set contentProviderContent = oro_ui_content_provider_manager.getContent(['navigationElements'])|first %}
<div id="bookmark-buttons">
    <div class="navigation clearfix">
        <div class="top-action-box">
            <button class="btn favorite-button" {% if contentProviderContent['favoriteButton'] == false %}style="display: none"{% endif %}
                    data-title="{{ oro_title_render_serialized() }}"
                    data-title-rendered-short="{{ oro_title_render_short() }}"
                    title="{{ 'oro.navigation.favorites.button.title'|trans }}">
                        <i class="icon-star hide-text">{{ 'oro.navigation.favorites.button'|trans }}</i>
            </button>
            <button class="btn minimize-button" {% if contentProviderContent['pinButton'] == false %}style="display: none"{% endif %}
                    data-title="{{ oro_title_render_serialized() }}"
                    data-title-rendered-short="{{ oro_title_render_short() }}"
                    title="{{ 'oro.navigation.pins.button.title'|trans }}">
                        <i class="icon-pushpin hide-text">{{ 'oro.navigation.pins.button'|trans }}</i>
            </button>
        </div>
    </div>
</div>
