{% extends 'OroUserBundle::layout.html.twig' %}
{% form_theme form with 'OroUIBundle:Form:login.html.twig' %}

{% block bodyClass %}login-page{% endblock %}

{% block content %}
    <div class="container">
        <div class="form-wrapper">
            <div class="form-wrapper__inner">
                {%- set resetLabel = 'Request'|trans %}
                {%- set cancelLabel = 'Return to Login'|trans %}
                {%- set showLabels = (resetLabel|length <= 9) and (cancelLabel|trans <= 9) %}
                {% set layoutName = showLabels ? 'form-row-layout' : 'form-column-layout' %}
                {{ form_start(form, {
                    'action': path('oro_user_reset_reset', { token: token }),
                    'attr': {
                        'class': 'form-signin form-reset' ~ {{ layoutName }}
                    }
                }) }}
                    <div class="title-box">
                        <h2 class="title">{{ 'Password Reset'|trans }}</h2>
                    </div>
                    <fieldset class="field-set oro-forgot-password">
                        {% if form.vars.errors|length > 0 %}
                            <div class="alert alert-error" role="alert">
                                {{ form_errors(form) }}
                            </div>
                        {% endif %}
                        {{ form_rest(form) }}
                        <div class="form-row form-signin__footer form-signin__footer--reset">
                            <button class="btn extra-submit btn-uppercase btn-primary" type="submit">{{ 'Reset'|trans }}</button>
                            <a href="{{ path('oro_user_security_login') }}" class="form-signin__link btn">{{ 'Cancel'|trans }}</a>
                        </div>
                    </fieldset>
                {{ form_end(form) }}
            </div>
            <div class="login-copyright">{{ 'oro.auth.copy'|trans }}</div>
        </div>
    </div>
{% endblock %}
