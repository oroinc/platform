{% extends 'OroUIBundle:actions:index.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% set gridName = 'users-grid' %}
{% set pageTitle = 'oro.user.entity_plural_label'|trans %}

{% block navButtons %}
    {% import 'OroUIBundle::macros.html.twig' as UI %}

    {% include 'OroImportExportBundle:ImportExport:buttons_from_configuration.html.twig' with {
        'alias': 'oro_user'
    } %}

    {% if is_granted('oro_user_user_create') %}
        <div class="btn-group">
            {{ UI.addButton({
            'path': path('oro_user_create'),
            'entity_label': 'oro.user.entity_label'|trans
            }) }}
        </div>
    {% endif %}
{% endblock %}
