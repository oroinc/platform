                <tbody>
                <tr>
                    <td>&nbsp;</td>
                    <td style="padding: 5pt 0; background: #2ea63a; width: 130pt; text-align: center">
                        <a style="color: #ffffff; font-size: 11pt; text-transform: uppercase; text-decoration: none; line-height: 1em; font-family: Arial, Helvetica, sans-serif;" href="{{ oro_config_value('oro_ui.application_url') }}{{ path('oro_user_reset_reset', { token: entity.confirmationToken }) }}" target="_blank">
                            RESET&nbsp;PASSWORD
                        </a>
                    </td>
                    <td>&nbsp;</td>
                </tr>
                </tbody>
            </table>
        </td>
    </tr>
</table>
