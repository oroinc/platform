{% extends "OroUIBundle:Default:index.html.twig" %}
{% block bodyClass %}
    login-page
{% endblock %}
{% block header %}
{% endblock %}
{% block content %}
    <div class="container">
        <form class="form-signin">
            <div class="title-box">
                <h1 class="oro-title">{{ oro_config_value('oro_ui.application_name') }}</h1>
                <span class="divider-vertical"></span>
                <h2 class="title">{{ 'Login'|trans }}</h2>
            </div>
            <fieldset>
                <div class="input-prepend">
                    <span class="add-on">{{ 'Username'|trans }}</span>
                    <input type="text" placeholder="login" id="prependedInput" class="span2">
                </div>
                <div class="input-prepend">
                    <span class="add-on">{{ 'Password'|trans }}</span>
                    <input type="password" placeholder="pass" id="prependedInput2" class="span2">
                </div>
                <div class="form-row">
                    <label class="checkbox">
                        <input type="checkbox" value="remember-me"> {{ 'Remember me on this computer'|trans }}
                    </label>
                </div>
                <button type="submit" class="btn btn-large btn-primary">{{ 'Log in'|trans }}</button>
                <div class="form-row">
                    <a href="#">{{ 'Forgot your username?'|trans }}</a>
                    <span class="divider-vertical">|</span>
                    <a href="#">{{ 'Forgot your password?'|trans }}</a>
                </div>
            </fieldset>
        </form>
    </div>
{% endblock content %}
