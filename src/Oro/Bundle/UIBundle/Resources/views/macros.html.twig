            {{ 'Owner'|trans }}:
            {% if ownerPath is defined %}
                <a href="{{ ownerPath }}">{{ ownerName }}</a>
            {% else %}
                {{ ownerName }}
            {% endif %}
        {% endif %}
    {% endif -%}
