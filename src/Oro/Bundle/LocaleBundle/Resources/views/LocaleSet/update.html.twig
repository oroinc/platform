{% extends 'OroUIBundle:actions:update.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}

{% oro_title_set({params : {
    '%name%': entity.name|default('N/A'|trans),
    '%entityName%': 'oro.locale.localeset.entity_label'|trans
} }) %}

{% set formAction = entity.id ? path('oro_locale_localeset_update', { 'id': entity.id }) : path('oro_locale_localeset_create')  %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity':      entity,
        'indexPath':   path('oro_locale_localeset_index'),
        'indexLabel': 'oro.locale.localeset.entity_plural_label'|trans,
        'entityTitle': entity.id ? 'oro.locale.localeset.navigation.view'|trans({'%name%': entity.name}) : 'oro.ui.create_entity'|trans({'%entityName%': 'oro.locale.localeset.entity_label'|trans})
    } %}

    {{ parent() }}
{% endblock pageHeader %}

{% block navButtons %}
    {{ parent() }}

    {{ UI.cancelButton(path('oro_locale_localeset_index')) }}
    {% if entity.id and resource_granted('oro_locale_localeset_update') or resource_granted('oro_locale_localeset_create') %}
        {% set html = UI.saveAndStayButton() %}
        {% if resource_granted('oro_locale_localeset_view') %}
            {% set html = html ~ UI.saveAndCloseButton() %}
        {% endif %}

        {{ UI.dropdownSaveButton({'html': html}) }}
    {% endif %}

{% endblock navButtons %}

{% block content_data %}
    {% set id = 'localeset-edit' %}

    {% set dataBlocks = [
        {
            'title': 'oro.locale.localeset.sections.general'|trans,
            'class': 'active',
            'subblocks': [{
                'data': [
                    form_widget(form),
                ]
            }]
        }
    ] %}

    {% set data = {
        'formErrors': form_errors(form),
        'dataBlocks': dataBlocks
    }%}

    {{ parent() }}
{% endblock content_data %}
