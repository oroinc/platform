{% extends '@OroUI/actions/index.html.twig' %}
{% import '@OroUI/macros.html.twig' as UI %}

{% set gridName = 'attribute-family-grid' %}
{% set pageTitle = attributeFamiliesLabel|trans %}

{% block navButtons %}
    {% import '@OroUI/macros.html.twig' as UI %}

    {% if is_granted('oro_attribute_family_create') %}
        <div class="btn-group pull-right">
            {{ UI.addButton({
                'path':  path('oro_attribute_family_create', { 'alias': alias }),
                'entity_label': 'oro.entity_config.attribute_family.entity_label'|trans})
            }}
        </div>
    {% endif %}
    {{ parent() }}
{% endblock navButtons %}
