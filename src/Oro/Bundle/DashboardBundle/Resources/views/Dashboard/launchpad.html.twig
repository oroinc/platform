{% if widgetAcl is defined and resource_granted(widgetAcl) %}
    <div class="widget-content launchpad-widget-content{% if widgetClass is defined and widgetClass %} {{ widgetClass }}-widget-content{% endif %}">
        <div class="clearfix">
            <div class="image-wrap pull-left">
                <p class="text-center">
                    {{ widgetLabel|trans }}
                </p>
                {% if widgetIcon is defined and widgetIcon %}
                    <a href="javascript:void(0);" class="icon-{{ widgetIcon }} widget-image"></a>
                {% endif %}
            </div>
            <div class="list-wrap pull-left">
                <ul class="nav nav-list">
                    {% for item in items %}
                        {% if resource_granted(item.acl) %}
                            <li class="{{ loop.last ? 'last' : '' }}">
                                <a href="{{ path(item.route, item.route_parameters|default({})) }}">{{ item.label|trans }}</a>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endif %}
